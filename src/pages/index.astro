---
import { Image } from "@astrojs/image/components";

import { experiences, recentProjects } from "../data";
import profile from "../images/profile.png";
import "../styles/base.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#f1f5f9"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#0f172a"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="The personal website of Tyson Louth, a senior front end developer from Orillia, Ontario, Canada."
    />
    <title>Tyson Louth | Senior Front End Developer</title>
  </head>
  <body
    class="bg-slate-100 dark:bg-slate-900 dark:text-gray-100 p-4 md:p-8 font-mono"
  >
    <header>
      <h1 class="sr-only">Tyson Louth | Front End Developer</h1>
    </header>
    <section>
      <h2 class="heading">Profile</h2>
      <div class="card block sm:flex items-center gap-6">
        <Image
          src={profile}
          alt="Tyson Louth profile image."
          class="w-16 h-16 sm:w-24 sm:h-24 mb-4 sm:mb-0"
        />
        <div class="flex-auto">
          <div class="border-b border-gray-200 dark:border-slate-700 mb-2 pb-2">
            <h3 class="font-semibold">Tyson Louth</h3>
            <p>Senior Front End Developer</p>
          </div>
          <div class="flex items-center gap-4 text-sm">
            <a
              target="_blank"
              rel="noopener noreferrer"
              href="https://github.com/tlouth19"
              class="underline"
            >
              Github
            </a>
            <a
              target="_blank"
              rel="noopener noreferrer"
              href="https://dev.to/tlouth19"
              class="underline"
            >
              Dev.to
            </a>
            <a
              target="_blank"
              rel="noopener noreferrer"
              href="https://www.linkedin.com/in/tyson-louth-816b6aa9"
              class="underline"
            >
              LinkedIn
            </a>
            <a href="mailto:tysonlouth@gmail.com" class="underline"> Email</a>
          </div>
        </div>
      </div>
    </section>
    <section>
      <h2 class="heading">Experience</h2>
      {
        experiences.map((experience) => (
          <div class="card">
            <h3 class="font-semibold mb-2">
              <>
                <span class="block sm:inline">{experience.title} </span>
                <span class="hidden sm:inline">-</span>
              </>{" "}
              <span class="block sm:inline"> {experience.description}</span>
            </h3>
            <p class="text-sm">{experience.location}</p>
            <p class="text-sm mb-4">{experience.date}</p>

            <p class="sr-only">Tools used:</p>
            <ul class="flex flex-wrap gap-2 ">
              {experience.points.map((point) => (
                <li class="inline-block bg-gray-100 dark:bg-slate-700 px-2 py-1 text-xs">
                  {point}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </section>
    <section>
      <h2 class="heading">Education</h2>
      <div class="card">
        <h3 class="font-semibold mb-2">
          <span class="block sm:inline">Pfeiffer University</span>
          <span class="hidden sm:inline">-</span>
          <span class="block sm:inline"> B.S Computer Information Systems</span>
        </h3>
        <p class="text-sm">Misenheimer, NC</p>
        <p class="text-sm">August 2009 to May 2013</p>
      </div>
    </section>
    <section>
      <h2 class="heading">Awards</h2>
      <ul class="list-disc pl-4">
        <li>
          Created and implemented an{" "}
          <a
            href="https://patents.google.com/patent/US10148388B1/en?inventor=tyson+louth&oq=tyson+louth"
            class="underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            anti-piracy patent</a
          > to protect filmmakers
        </li>
      </ul>
    </section>
    <section>
      <h2 class="heading">Recent Personal Projects</h2>
      {
        recentProjects.map((project) => (
          <div class="card">
            <div class="flex gap-2 items-center justify-between mb-2">
              <p class="font-semibold">{project.title}</p>
              <div class="flex items-center gap-1">
                {" "}
                <a
                  href={project.url}
                  target="_blank"
                  target="_blank"
                  rel="noopener noreferrer"
                  class=" text-sm flex items-center gap-2 bg-transparent hover:bg-black focus:bg-black rounded p-2"
                  aria-label={`Visit ${project.title} website`}
                >
                  <span class="sr-only">Website</span>
                  <svg
                    width="15"
                    height="15"
                    viewBox="0 0 15 15"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
